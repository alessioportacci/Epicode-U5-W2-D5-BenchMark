@model Epicode_U5_W2_D5_BenchMark.Models.RichiesteModel

@{
    ViewBag.Title = "Create";
}

<h2>Aggiungi Tipologia</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.EditorFor(model => model.FkPrenotazione, new { htmlAttributes = new { @class = "form-control d-none", @Value = ViewBag.id } })

        <div class="form-group">
            @Html.LabelFor(model => model.FkTipologia, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownList("FkTipologia", new SelectList(ViewBag.richieste, "value", "text"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FkTipologia, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aggiungi" class="btn btn-primary mt-3" />
            </div>
        </div>
    </div>
}