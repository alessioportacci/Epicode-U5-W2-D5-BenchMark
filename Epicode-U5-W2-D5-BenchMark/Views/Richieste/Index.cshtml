@model IEnumerable<Epicode_U5_W2_D5_BenchMark.Models.RichiesteModel>

@{
    ViewBag.Title = "Index";
}

@if (Model.Count() != 0)
{
    <h3> Richieste aggiuntive </h3>
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Richiesta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezzo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataRichiesta)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Richiesta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezzo) €
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataRichiesta)
                </td>
                @*
                    <td>
                        @Html.ActionLink("Rimuovi", "Delete", new { id=item.PkRichiesta })
                    </td>
                *@
            </tr>
        }
    </table>
}

